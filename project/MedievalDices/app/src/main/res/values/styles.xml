<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/gray2</item>
        <item name="colorPrimaryDark">@color/gray1</item>
        <item name="colorAccent">@color/gray3</item>
    </style>

    <style name="dice_font">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="amount_font">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="result_font">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
